{% extends 'base.html.twig' %}

{% block title %}Logs de connexion - Administration{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4">Logs de connexion</h2>
    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Utilisateur</th>
                    <th scope="col">Adresse IP</th>
                </tr>
            </thead>
            <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.date|date('d/m/Y H:i:s') }}</td>
                        <td>{{ log.userEmail }}</td>
                        <td>{{ log.ip }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">Aucun log enregistr√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<style>
    .table thead th {
        background: #23272b;
        color: #1ed5a9;
        border-bottom: 2px solid #6f42c1;
    }
    .table td, .table th {
        vertical-align: middle;
    }
</style>
{% endblock %}
